<?xml version="1.0" encoding="UTF-8"?>
<themes>
    <fontDef name="Counter_Monster_Name" filename="NotoSans-Medium.ttc" color="#ffffff" border_width="1.4" border_color="#000000" size="18" hinting="Full" offsetY="-3"/>
	<fontGen/>


	<images file="Base_Dot.png" filter="nearest">
		<area name="Base_Square" xywh="*"/>
		<area name="Base_Dot" xywh="*" splitx="L1,R0" splity="T1,B0"/>

		<composed name="Battle_Pattern">
			<alias ref="Base_Dot" inset="0,0,0,0"/>
		</composed>

	</images>

	<theme name="battlegui" ref="battlegui">
		<param name="overlay"><image>Battle_Pattern</image></param>
	</theme>

	<theme name="redlabel" ref="redlabel" allowWildcard="true">
		<param name="border"><border>0,0,0,0</border></param>
		<param name="font"><font>Counter_Monster_Name</font></param>
		<param name="textAlignment"><enum type="alignment">CENTER</enum></param>
	</theme>
</themes>